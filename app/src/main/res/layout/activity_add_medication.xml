<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/back"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/new_medication"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Medication Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medication_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/medicationNameEdit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/medication_name"
            android:inputType="textCapWords"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Dosage -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dosage"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/dosageEdit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/dosage"
            android:inputType="text"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Frequency Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_often"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/onceCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/onceText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/once_daily"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/twiceCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/twiceText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/twice_daily"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/threeTimesCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/threeTimesText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/three_times_daily"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fourTimesCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/fourTimesText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/four_times_daily"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Time Slot Selection (for once/twice per day) -->
        <LinearLayout
            android:id="@+id/timeSlotLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn khung giờ uống thuốc"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/timeMorning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sáng (8:00)" />
                <CheckBox
                    android:id="@+id/timeNoon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trưa (11:00)" />
                <CheckBox
                    android:id="@+id/timeAfternoon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chiều (17:00)" />
                <CheckBox
                    android:id="@+id/timeEvening"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tối (20:00)" />
            </LinearLayout>
        </LinearLayout>

        <!-- Duration Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/for_how_long"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/days7Card"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/days7Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/days_7"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/days14Card"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/days14Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/days_14"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/days30Card"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/days30Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/days_30"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/days90Card"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/days90Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/days_90"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ongoingCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/ongoingText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/ongoing"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Start Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/startDateText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/edit_text_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:text="Bắt đầu từ hôm nay"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawablePadding="8dp" />

        <!-- Add Button -->
        <Button
            android:id="@+id/addMedicationButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:text="@string/add_medication_button"
            style="@style/PrimaryButtonStyle" />

    </LinearLayout>

</ScrollView>
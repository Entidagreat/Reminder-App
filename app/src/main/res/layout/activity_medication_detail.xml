<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:contentDescription="@string/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chỉnh sửa thông tin thuốc"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Medication Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medication_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/medication_name"
            android:inputType="textCapWords"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Dosage -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dosage"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/txtDosage"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/edit_text_background"
            android:hint="@string/dosage"
            android:inputType="text"
            android:padding="16dp"
            android:textSize="16sp" />

        <!-- Frequency Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lần uống mỗi ngày"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/onceCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/onceText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/once_daily"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/twiceCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/twiceText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/twice_daily"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/threeTimesCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/threeTimesText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/three_times_daily"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/fourTimesCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/fourTimesText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/four_times_daily"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Giờ uống"-->
<!--            android:textSize="16sp"-->
<!--            android:textStyle="bold"-->
<!--            android:textColor="@color/text_primary"-->
<!--            android:layout_marginBottom="12dp" />-->

<!--        <TextView-->
<!--            android:id="@+id/txtReminders"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="46dp"-->
<!--            android:layout_marginBottom="24dp"-->
<!--            android:hint="Giờ uống"-->
<!--            android:padding="11dp"-->
<!--            android:textSize="16sp" />-->

        <LinearLayout
            android:id="@+id/timeSlotLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn khung giờ uống thuốc"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/timeMorning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sáng (8:00)" />
                <CheckBox
                    android:id="@+id/timeNoon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trưa (11:00)" />
                <CheckBox
                    android:id="@+id/timeAfternoon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chiều (17:00)" />
                <CheckBox
                    android:id="@+id/timeEvening"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tối (20:00)" />
            </LinearLayout>
        </LinearLayout>


        <!-- Duration Selection -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/days7Card"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/days7Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/days_7"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/days14Card"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/days14Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/days_14"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/days30Card"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/days30Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/days_30"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/days90Card"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/days90Text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/days_90"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ongoingCard"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                style="@style/CardStyle">

                <TextView
                    android:id="@+id/ongoingText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/ongoing"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày bắt đầu uống"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="0dp" />

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginBottom="4dp"
                    android:hint="Ngày bắt đầu uống"
                    android:paddingTop="11dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đến ngày"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="0dp" />

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginBottom="4dp"
                    android:hint="Đến ngày"
                    android:paddingTop="11dp"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/startDateText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/edit_text_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:textStyle="bold"
            android:text="Chọn lại ngày bắt đầu"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawablePadding="8dp" />

        <!-- Reminders Section -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/updateMedicineButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:text="Cập nhật"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/deleteMedicineButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Xóa"
                android:textColor="@android:color/white"
                android:backgroundTint="#F44336"
                android:layout_marginStart="8dp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <!-- Card Style -->
    <style name="CardStyle">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/primary_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Material Button Style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Material Chip Style -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/primary_green_light</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipStrokeColor">@color/primary_green</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <!-- Switch Material Style -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorSecondary">@color/primary_green</item>
        <item name="colorOnSurface">@color/text_secondary</item>
    </style>
</resources>